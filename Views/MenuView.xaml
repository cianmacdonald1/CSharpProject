<UserControl x:Class="GalacticCommander.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Background="{StaticResource SpaceBrush}">
        
        <!-- Animated Background Elements -->
        <Canvas>
            <!-- Rotating background geometry for visual appeal -->
            <Polygon x:Name="BackgroundShape1"
                     Fill="#20FFFFFF" 
                     Points="0,0 100,50 0,100" 
                     Canvas.Left="100" 
                     Canvas.Top="200"
                     RenderTransformOrigin="0.5,0.5">
                <Polygon.RenderTransform>
                    <RotateTransform x:Name="BackgroundRotateTransform"/>
                </Polygon.RenderTransform>
            </Polygon>
            
            <!-- Additional decorative elements -->
            <Ellipse Fill="#10CYAN" Width="200" Height="200" Canvas.Left="800" Canvas.Top="100"/>
            <Rectangle Fill="#10MAGENTA" Width="150" Height="150" Canvas.Left="50" Canvas.Top="500"/>
        </Canvas>
        
        <!-- Main Menu Content -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Title Section with Glow Effect -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
                
                <!-- Glow Background -->
                <TextBlock x:Name="TitleGlow"
                          Text="GALACTIC COMMANDER" 
                          FontSize="72" 
                          FontWeight="Bold"
                          Foreground="#40CYAN"
                          HorizontalAlignment="Center"
                          Margin="-2,-2,2,2"/>
                
                <!-- Main Title -->
                <TextBlock x:Name="TitleText"
                          Text="GALACTIC COMMANDER" 
                          FontSize="72" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Opacity="0">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Cyan" Offset="0"/>
                            <GradientStop Color="Blue" Offset="0.5"/>
                            <GradientStop Color="Magenta" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                    <TextBlock.RenderTransform>
                        <TranslateTransform x:Name="TitleTransform" Y="-50"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                
                <!-- Subtitle -->
                <TextBlock Text="Advanced C# Space Strategy Game" 
                          FontSize="18" 
                          Foreground="Orange" 
                          HorizontalAlignment="Center"
                          Margin="0,10,0,0"
                          FontStyle="Italic"/>
                          
            </StackPanel>
            
            <!-- Menu Buttons -->
            <StackPanel x:Name="MenuButtonsPanel" 
                       Grid.Row="2" 
                       Orientation="Vertical" 
                       HorizontalAlignment="Center">
                
                <!-- New Game Button -->
                <Button Content="NEW GAME" 
                       Command="{Binding StartGameCommand}"
                       Style="{StaticResource PrimaryMenuButtonStyle}"
                       MouseEnter="OnButtonMouseEnter"
                       MouseLeave="OnButtonMouseLeave"
                       Opacity="0">
                    <Button.RenderTransform>
                        <TranslateTransform X="30"/>
                    </Button.RenderTransform>
                </Button>
                
                <!-- Settings Button -->
                <Button Content="SETTINGS" 
                       Command="{Binding ShowSettingsCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       MouseEnter="OnButtonMouseEnter"
                       MouseLeave="OnButtonMouseLeave"
                       Margin="0,10,0,0"
                       Opacity="0">
                    <Button.RenderTransform>
                        <TranslateTransform X="30"/>
                    </Button.RenderTransform>
                </Button>
                
                <!-- High Scores Button -->
                <Button Content="HIGH SCORES" 
                       Command="{Binding ShowHighScoresCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       MouseEnter="OnButtonMouseEnter"
                       MouseLeave="OnButtonMouseLeave"
                       Margin="0,10,0,0"
                       Opacity="0">
                    <Button.RenderTransform>
                        <TranslateTransform X="30"/>
                    </Button.RenderTransform>
                </Button>
                
                <!-- Help Button -->
                <Button Content="HELP" 
                       Style="{StaticResource MenuButtonStyle}"
                       MouseEnter="OnButtonMouseEnter"
                       MouseLeave="OnButtonMouseLeave"
                       Margin="0,10,0,0"
                       Opacity="0">
                    <Button.RenderTransform>
                        <TranslateTransform X="30"/>
                    </Button.RenderTransform>
                </Button>
                
                <!-- Exit Button -->
                <Button Content="EXIT" 
                       Command="{Binding ExitApplicationCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       MouseEnter="OnButtonMouseEnter"
                       MouseLeave="OnButtonMouseLeave"
                       Margin="0,10,0,0"
                       Opacity="0">
                    <Button.RenderTransform>
                        <TranslateTransform X="30"/>
                    </Button.RenderTransform>
                </Button>
            </StackPanel>
            
            <!-- Footer Information -->
            <StackPanel Grid.Row="3" 
                       VerticalAlignment="Bottom" 
                       HorizontalAlignment="Center"
                       Margin="0,50,0,20">
                
                <TextBlock Text="Advanced C# Features Demonstrated:" 
                          FontSize="14" 
                          Foreground="Yellow" 
                          HorizontalAlignment="Center"
                          FontWeight="Bold"/>
                
                <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock Text="• Entity Component System  " FontSize="10" Foreground="White"/>
                    <TextBlock Text="• MVVM Pattern  " FontSize="10" Foreground="White"/>
                    <TextBlock Text="• Dependency Injection  " FontSize="10" Foreground="White"/>
                    <TextBlock Text="• Async/Await  " FontSize="10" Foreground="White"/>
                </WrapPanel>
                
                <WrapPanel HorizontalAlignment="Center" Margin="0,2,0,0">
                    <TextBlock Text="• Generics &amp; LINQ  " FontSize="10" Foreground="White"/>
                    <TextBlock Text="• Physics Simulation  " FontSize="10" Foreground="White"/>
                    <TextBlock Text="• Particle Systems  " FontSize="10" Foreground="White"/>
                    <TextBlock Text="• Performance Optimization" FontSize="10" Foreground="White"/>
                </WrapPanel>
                
                <TextBlock Text="{Binding Version, StringFormat='Version {0}'}" 
                          FontSize="10" 
                          Foreground="Gray" 
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>